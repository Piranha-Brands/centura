Embroidery inputs for PDP 
{% endcomment %}

{% assign embroiderable = product.collections | where:'handle','embroiderable' | size %}  
{% assign embroidery = all_products['embroidery'] %}

{% assign location = customer.metafields.customer_fields.location.value %}
{% assign embroidery_variants = embroidery.variants | where:'option1',location %}

<div name="test" class="{{ embroiderable }} - {{ location }}"></div>

{% if request.path contains "pant" %}

{% elsif embroiderable == 1 and location != "SAH" %}
    

    <input type="hidden" name="embroidery-variant" value="{{ embroidery_variants.first.id }}">
    <input type="hidden"name="embroidery-sku" value="{{ embroidery_variants.first.sku }}">



{% endif %}