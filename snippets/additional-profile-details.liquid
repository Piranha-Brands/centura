<h3>Additional Profile Details</h3>
<div class="additional-address-container">
  {% if customer.metafields.customer_fields.location.value != blank %} 
  <p class="additional-details">Hospital Location: {{ customer.metafields.customer_fields.location.value }}</p>
  {% endif %}
  {% if customer.metafields.customer_fields.department.value != blank  %}
  <p class="additional-details">Department: {{ customer.metafields.customer_fields.department.value }}</p>
  {% endif %}
  {% if customer.metafields.customer_fields.employment.value != blank  %}
  <p class="additional-details">Employment: {{ customer.metafields.customer_fields.employment.value }}</p>
  {% endif %}
  {% if customer.metafields.customer_fields.colors.value != blank  %}
  <p class="additional-details">Color Options: {{ customer.metafields.customer_fields.colors.value }}</p>
  {% endif %}
</div>

{% style %}
  .additional-address-container {
/*     border: 0.8px solid grey; */
  }
  .additional-details {
    margin-bottom: 0px;
/*     border: 1px solid red; */
  }
{% endstyle %}

